{
  "timing_settings": {
    "pack_timeout_seconds": 5,
    "scheduler_interval_seconds": 30,
    "rate_limit_window_seconds": 60,
    "max_messages_per_window": 20,
    "flood_wait_retry_delay_seconds": 1,
    "cache_cleanup_interval_minutes": 1,
    "announcement_retry_delay_seconds": 10,
    "connection_timeout_seconds": 30,
    "message_send_timeout_seconds": 15
  },
  "monitoring_settings": {
    "enable_detailed_logging": true,
    "log_performance_metrics": true,
    "track_success_rates": true,
    "monitor_memory_usage": true,
    "alert_on_high_failure_rate": true,
    "failure_rate_threshold_percent": 50
  },
  "task_management": {
    "max_concurrent_announcements": 5,
    "max_peers_per_pack": 10,
    "pack_processing_timeout_seconds": 300,
    "enable_task_queuing": true,
    "task_priority_levels": ["high", "medium", "low"]
  },
  "performance_tuning": {
    "enable_connection_pooling": true,
    "max_connections_per_driver": 3,
    "enable_async_processing": true,
    "batch_size_for_peers": 5,
    "enable_compression": false
  }
}
