[Unit]
Description=Elon Telegram Bot
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/root/elon
Environment=PYTHONUNBUFFERED=1
ExecStart=/root/elon/.venv/bin/python /root/elon/main.py
Restart=on-failure
RestartSec=3
TimeoutStopSec=20
# Hardening (optional but nice):
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=full
ProtectHome=read-only

[Install]
WantedBy=multi-user.target
